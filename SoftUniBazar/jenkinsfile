pipeline {
    agent {
        label any
    }

    environment {
        DOTNET_VERSION = '6.0.x'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup .NET 6 SDK') {
            steps {
                // Assumes .NET SDK 6 is already installed on the agent.
                // You can add a script to install it if needed.
                bat 'dotnet --version'
            }
        }

        stage('Restore Dependencies') {
            steps {
                bat 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --no-restore'
            }
        }

        stage('Test') {
            steps {
                bat 'dotnet test --no-build --verbosity normal'
            }
        }
    }
}
